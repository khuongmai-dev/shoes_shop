<header class="p-3 text-bg-dark">
<nav class="navbar navbar-expand-lg">
  <div class="container-fluid align-items-center">
  <a href="/" class="navbar-brand nav-link px-2 fs-4 text-secondary text-white text-decoration-none">ShoeShop</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav col-3 col-md-3 mb-2 mb-lg-0">
        <li class="nav-item"></li>
        <li class="nav-item"><a href="/categories" class="nav-link px-2  text-white-50 text-decoration-none">Categories</a></li>
        <li class="nav-item"><a href="/brands" class="nav-link px-2 text-white-50 text-decoration-none">Brands</a></li>
        <li class="nav-item"><a href="/cart" class="nav-link px-2 text-white-50 text-decoration-none">Cart</a></li>
        <li class="nav-item"><a href="/pages/about-us" class="nav-link px-2 text-white-50 text-decoration-none">About</a></li>
      </ul>
      <div class="d-flex d-flex col-12 col-md-6 col-sm-12 justify-content-center">
        <%= form_with(url: search_products_path, method: :get, local: true, class: "d-flex col-12") do |form| %>
          <%= select_tag (:cat_id), options_from_collection_for_select(@categories, :id, :name, @selected_category.try(:id)), :prompt => "All" %>
          <%= text_field_tag(:keywords, @query, style: "", class: "form-control form-control-light text-bg-light", placeholder: 'Search') %>
          <button type="submit" class="btn">
            Search
          </button>
        <% end %>
      </div>
      <%= render partial: 'shop_users/session_manager' %>
    </div>
  </div>
</nav>
</header>