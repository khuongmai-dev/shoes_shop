<h1>New Address</h1>

<%= form_with(url: shop_user_addresses_path(@user)) do |f| %>
  <%= f.label :unit_number %>
  <%= f.text_field :unit_number %>

  <%= f.label :street %>
  <%= f.text_field :street %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :province %>
  <%= f.text_field :province %>

  <%= f.label :country %>
  <%= f.text_field :country %>

  <%= f.label :postal_code %>
  <%= f.text_field :postal_code %>

  <%= f.submit 'Create Address' %>
<% end %>

<%= link_to 'Back', shop_user_path(@user) %>